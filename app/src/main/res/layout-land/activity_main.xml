<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="horizontal"
    android:padding="16dp"
    >

    <ScrollView
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <Button
                    android:id="@+id/btn_ver"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="@string/main_ver"
                    />

                <Button
                    android:id="@+id/btn_paper"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="@string/main_paper_out"
                    />
            </LinearLayout>

            <Button
                android:id="@+id/btn_print"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/main_test"
                />

            <Button
                android:id="@+id/btn1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/main_text"
                android:visibility="gone"
                />

            <Button
                android:id="@+id/btn2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/main_barcode"
                android:visibility="gone"
                />

            <Button
                android:id="@+id/btn3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/main_qr_code"
                android:visibility="gone"
                />

            <Button
                android:id="@+id/btn4"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/main_pic"
                android:visibility="gone"
                />

            <Button
                android:id="@+id/btn5"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/main_table"
                />

            <Button
                android:id="@+id/btn6"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/main_escpos"
                />

            <Button
                android:id="@+id/btn_lbl"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/main_lbl"
                />

            <Button
                android:id="@+id/btn_lbl_learning"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/main_lbl_learning"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/btn_lcd_bmp"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="@string/main_lcd_bitmap"
                    />

                <Button
                    android:id="@+id/btn_lcd_reset"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="@string/main_lcd_reset"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/btn_lcd_wakeup"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="@string/main_lcd_wakeup"
                    />

                <Button
                    android:id="@+id/btn_lcd_sleep"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="@string/main_lcd_sleep"
                    />
            </LinearLayout>

            <Button
                android:id="@+id/btn_cash_box"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/main_cash_box"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/btn_infrared_scan"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="@string/main_qsc"
                    />

                <Button
                    android:id="@+id/btn_camera_scan"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="@string/main_scan"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        >

        <TextView
            android:id="@+id/tv_log"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="18sp"
            />
    </ScrollView>
</LinearLayout>
